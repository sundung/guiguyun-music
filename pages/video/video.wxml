<!--pages/video/video.wxml-->
<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search" bindtap="toSearch">
      搜索音乐
    </view>
    <image src="/static/images/logo.png"></image>
  </view>
  <!-- 推荐导航区域 -->
  <scroll-view
      scroll-x
      class="scrollContainer"
      enable-flex
      scroll-into-view="{{'scroll' + navId}}"
      scroll-with-animation
  >
    <view id="{{'scroll' + item.id}}" class="scrollItem" wx:for="{{videoGroupList}}" wx:key="id">
      <view class="scrollContent {{navId == item.id?'active': ''}}" bindtap="changeNav" id="{{item.id}}" data-id="{{item.id}}">
        {{item.name}}
      </view>
    </view>
  </scroll-view>
<!-- 视频区域 -->
    <scroll-view class="scrollVideo"  scroll-y >
        <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
            <video src="{{item.data.urlInfo.url}}"></video>
        </view>
    </scroll-view>
      
</view>
