.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search {
  flex: 1;
  border: 1px solid #eee;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
  color: #d43c33;
}
.videoContainer .scrollContainer {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.videoContainer .scrollContainer .scrollItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.videoContainer .scrollContainer .scrollItem .active {
  border-bottom: 1rpx solid #d43c33;
}
.videoContainer .scrollContainer .scrollContent {
  height: 60rpx;
  box-sizing: border-box;
}
.videoContainer .scrollVideo {
  margin-top: 10rpx;
}
.videoContainer .scrollVideo .videoItem {
  padding: 0 3%;
}
.videoContainer .scrollVideo .videoItem video {
  width: 100%;
  height: 320rpx;
  border-radius: 10rpx;
}
