.topListDetailContainer .bgc image {
  width: 100%;
  height: 380rpx;
}
.topListDetailContainer .musicListScrollContainer {
  height: calc(100vh - 380rpx);
}
.topListDetailContainer .musicListScrollContainer .scrollItem {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.topListDetailContainer .musicListScrollContainer .scrollItem .index {
  width: 140rpx;
  text-align: center;
}
.topListDetailContainer .musicListScrollContainer .scrollItem .image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.topListDetailContainer .musicListScrollContainer .scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
}
.topListDetailContainer .musicListScrollContainer .scrollItem .musicName {
  height: 40rpx;
  line-height: 40rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.topListDetailContainer .musicListScrollContainer .scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}
