.recommendSongContainer .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.recommendSongContainer .header image {
  width: 100%;
  height: 100%;
}
.recommendSongContainer .header .date {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
  margin-top: -50rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.recommendSongContainer .header .date .day {
  font-size: 46rpx;
}
.recommendSongContainer .musicListContainer {
  position: relative;
  top: -20rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  background: #fff;
}
.recommendSongContainer .musicListContainer .musicListHeader {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}
.recommendSongContainer .musicListContainer .musicListScrollContainer {
  height: calc(100vh - 380rpx);
}
.recommendSongContainer .musicListContainer .musicListScrollContainer .scrollItem {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.recommendSongContainer .musicListContainer .musicListScrollContainer .scrollItem .image {
  width: 80rpx;
  height: 100rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.recommendSongContainer .musicListContainer .musicListScrollContainer .scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
}
.recommendSongContainer .musicListContainer .musicListScrollContainer .scrollItem .iconfont {
  position: absolute;
  right: 0;
  width: 40rpx;
  height: 40rpx;
}
