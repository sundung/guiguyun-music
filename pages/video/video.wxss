.videoContainer .header {
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}
.videoContainer .header .search {
  flex: 1;
  border: 1px solid #eee;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  margin: 0 20rpx;
  color: #d43c33;
}
.videoContainer .scrollContainer {
  display: flex;
  white-space: nowrap;
  height: 60rpx;
}
.videoContainer .scrollContainer .scrollItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.videoContainer .scrollContainer .scrollItem .active {
  border-bottom: 1rpx solid #d43c33;
}
.videoContainer .scrollContainer .scrollContent {
  height: 60rpx;
  box-sizing: border-box;
}
.videoContainer .scrollVideo {
  height: calc(100vh - 152rpx);
  margin-top: 10rpx;
}
.videoContainer .scrollVideo .videoItem {
  padding: 0 3%;
}
.videoContainer .scrollVideo .videoItem .common {
  width: 100%;
  height: 320rpx;
  border-radius: 10rpx;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .text {
  font-size: 28rpx;
  width: 440rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer {
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: space-between;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .left .avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .left .nickname {
  margin-left: 20rpx;
  font-size: 28rpx;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .right {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .right .item {
  position: relative;
  width: 70rpx ;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .right .item .count {
  position: absolute;
  top: -30rpx;
  font-size: 20rpx;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .right button {
  width: 20rpx;
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.videoContainer .scrollVideo .videoItem .scrollVideoContent .footer .right button:after {
  border: none;
}
